{
	"scheme": "semantic",
	"versionFile": "./package.json",
	"username": "h-budget",
	"email": "allmantool@gmail.com",
	"files": ["./package-lock.json"],
	"rules": [
		{
			"trigger": "commit",
			"bump": "build"
		},
		{
			"trigger": "commit",
			"bump": "minor",
			"branch": "master",
			"suffix": "-rc",
            "reset": ["minor", "build"],
			"tag": true
		},
		{
			"trigger": "commit",
			"bump": "major",
			"branch": "release",
			"reset": ["minor", "build"],
			"tag": true
		}
	]
}
