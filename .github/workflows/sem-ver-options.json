{
    "scheme": "semantic",
    "versionFile": "./package.json",
    "username": "h-budget",
    "email": "allmantool@gmail.com",
    "files": [
        "./package-lock.json"
    ],
    "rules": [
        {
            "trigger": "commit",
            "bump": "minor"
        },
        {
            "trigger": "commit",
            "bump": "minor",
            "branch": "build-deps-upgrade-npm-packages-automated",
            "tag": true
        },
        {
            "trigger": "pull-request",
            "bump": "build",
            "destBranch": "master",
            "reset": [
                "minor"
            ],
            "tag": true
        },
        {
            "trigger": "commit",
            "bump": "major",
            "branch": "release",
            "reset": [
                "minor",
                "build"
            ],
            "tag": true
        }
    ]
}
