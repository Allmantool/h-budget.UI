{
  "scheme": "semantic",
  "versionFile": "./Angular-app/package.json",
  "files": ["./package-lock.json"],
  "rules": [
    {
      "trigger": "commit",
      "branch": "hotfix",
      "bump": "build"
    },
    {
      "trigger": "commit",
      "bump": "minor",
      "branch": "master",
      "reset": "build",
      "tag": true
    },
    {
      "trigger": "commit",
      "bump": "major",
      "branch": "release",
      "tag": true,
      "reset": ["minor", "build"]
    }
  ]
}
