{
	"bracketSpacing": true,
	"bracketSameLine": false,
	"semi": true,
	"singleQuote": true,
	"semicolon": true,
	"trailingComma": "es5",
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"quoteProps": "as-needed",
	"endOfLine": "auto",
	"arrowParens": "avoid",
	"singleAttributePerLine": true,
	"overrides": [
		{
			"files": "*.component.html",
			"options": {
				"parser": "angular",
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": "*.html",
			"options": {
				"parser": "html",
				"htmlWhitespaceSensitivity": "ignore"
			}
		}
	]
}
